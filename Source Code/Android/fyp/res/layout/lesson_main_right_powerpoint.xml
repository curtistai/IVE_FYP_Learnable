<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Gallery
        android:id="@+id/lesson_main_right_powerpoint_Gallery01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/lesson_main_right_powerpoint_ImageView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.80" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/lesson_main_right_powerpoint_previousBtn"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Previous" />

        <TextView
            android:id="@+id/lesson_main_right_powerpoint_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page No:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/lesson_main_right_powerpoint_editText1"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <Button
            android:id="@+id/lesson_main_right_powerpoint_jumpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go" />

        <Button
            android:id="@+id/lesson_main_right_powerpoint_nextBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>